<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true" internalLogLevel="info" internalLogFile="..\internal-nlog.txt">

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <!-- Use the below directive to archive file every month  -->
    <!-- archiveEvery="Month"  -->
    <variable name="logDirectory" value="${basedir}/logs/${shortdate}" />
    <target xsi:type="File" name="allfile" fileName="C:\logs\ICEProducerLog\${shortdate}\ICEProducerLog-${shortdate}.log" 
            archiveFileName="C:\logs\ICEProducerLog\${shortdate}\ICEProducerLog-${shortdate}.{#}.log" archiveAboveSize="102400"
            archiveNumbering="Sequence"  concurrentWrites="true" keepFileOpen="false" 
            layout="${longdate}|${event-properties:item=EventId.Id}|${uppercase:${level}}|${logger}|${message} ${exception}">
    </target>

    <!-- write to the void aka just remove -->
    <target xsi:type="Null" name="blank" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!--Skip Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" minlevel="Trace" writeTo="blank" final="true" />
    <logger name="*" minlevel="Trace" writeTo="ownFile-web" />
  </rules>
</nlog>